@using FrontendDemo.Models
@model Claim

<h2>Create</h2>
<form asp-controller=Mediclaim asp-action=Create method="post">
            <div class="field">
                <div>
                    <label asp-for=Id>Patient Id :</label>
                </div>
                <div>
                    <input asp-for=Id type="number" />  
                </div>
            </div>
            <div class="field">
                <div>
                    <label asp-for=PatientName >Patient Name : </label>
                </div>
                <div>
                    <input asp-for=PatientName type="text"  />
                </div>
            </div>
            <div class="field">
                <div>
                    <label asp-for=Age>Patient Age : </label>
                </div>
                <div>
                    <input asp-for=Age type="number"  />
                </div>
            </div>
            <div class="field">
                <div>
                    <label asp-for=ClaimCause>Claim Cause : </label>
                </div>
                <div>
                    <input asp-for=ClaimCause type="text"  />
                </div>
            </div>
            <div class="field">
                <button type="submit">Create</button>
            </div>
</form>